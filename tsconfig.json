{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",

    "allowJs": true,
    "checkJs": true,

    "rootDir": "./src",
    "outDir": "./dist",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,

    "declaration": true,
    "sourceMap": true
  },
  "include": ["./src/**/*"]
}
